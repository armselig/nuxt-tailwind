{
  "name": "nuxt-tailwind",
  "version": "0.1.0",
  "description": "Template for SSR/SSG projects with Nuxt.js and Tailwind CSS",
  "author": "Hendrik Neumann <henne@armselig.net>",
  "license": "MIT",
  "private": true,
  "repository": "github:armselig/nuxt-tailwind",
  "bugs": {
    "url": "https://github.com/armselig/nuxt-tailwind/issues"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:cache": "rimraf ./.nuxt ./.output",
    "clean:dist": "rimraf ./dist",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:scripts": "eslint --ext \".js,.jsx,.mjs,.ts,.tsx,.vue\" --fix --ignore-path .gitignore .",
    "lint:styles": "stylelint \"**/*.{vue,css,scss}\" --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "lint": "run-p lint:*"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss,vue}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{cjs,html,json,md}": "prettier --write"
  },
  "dependencies": {
    "@dansmaculotte/nuxt-security": "^0.0.5",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/sitemap": "^2.4.0",
    "core-js": "^3.21.1",
    "nuxt": "^2.15.7",
    "tailwindcss": "^3.0.7"
  },
  "devDependencies": {
    "@aceforth/nuxt-optimized-images": "^1.4.0",
    "@babel/eslint-parser": "^7.16.5",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@nuxtjs/eslint-config": "^8.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/html-validator": "^0.6.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/tailwindcss": "^4.2.0",
    "autoprefixer": "^10.3.7",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-nuxt": "^1.0.1",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.45.0",
    "sass-loader": "^10",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "webp-loader": "^0.6.0",
    "webpack-cli": "^4.9.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie < 11"
  ],
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  }
}
